.container {
 display: flex;
 justify-content: space-around;
 align-items: stretch;
 align-content: stretch;
 padding: 0 0;
 margin: 15px;
}

.top {
 display: flex;
 justify-content: space-between;
 align-items: center;
}

.purple {
 padding-right: 12px;
}

.form-title {
 color: #FF2965;
 font-weight: bold;
 font-size: 28px;
 text-align: center;
 text-shadow: 2px 3px 6px #00000018;
}

#cross {
 font-weight: bold;
}

.form-subtitle {
 color: rgb(63, 63, 63);
 font-size: 16px;
 font-weight: 500;
 margin-bottom: 20px;
 text-align: center;
 padding-top: 8px;
}

.first-line {
 display: flex;
 justify-content: space-evenly;
 align-items: center;
}

.angle-icon {
  width: 10px;
  height: 6px;
  margin-left: 2.5px;
}

.address {
  color: grey;
  border: none;
  text-align: center;
  padding: 10px;
}

.desc {
border: 2px solid #8C4DE8;
width:91%;
display:flex;
padding:11px;
margin-bottom: 5px;
border-radius: 20rpx;
}

.desc-box {
 border: solid 1px #8C4DE8;
 height: 150px;
 margin-bottom: 5px;
 padding: 7px;
 text-indent: 10px;
 width: 100%;
}

.form-field {
 border: solid 2px #8C4DE8;
 margin-bottom: 5px;
 display: flex;
 flex-wrap: nowrap;
 align-items: center;
 padding-left: 10rpx;
 /* height: 30px; */
 text-overflow: ellipsis;
 border-radius: 20rpx;
 padding: 7px;
}

.form-field .active image {
  transform: rotate(180deg);
  background: none;
}

.category {
 /* width: 80px;
 padding-left: 18px; */
 /* padding-right: 4px; */
 display: flex;
 align-items: center;
 padding: 10px;
 color: #FF2965;
 font-size: 20px;
 font-weight: bold;
}

.name {
 /* width: 60%;
 padding-left: 17.5px; */
 text-align: center;
 color: rgb(63, 63, 63);
}


.purple {
 color: #8C4DE8;
 font-size: 20px;
 font-weight: bold;
}

.submit {
 border: solid 2px #e9e9e9;
 color: #f5f5f5;
 font-weight: bold;
 text-align: center;
 font-size: 18px;
 padding: 0px;
 width: 60%;
 background-color: #FF2965;
 border-radius: 15rpx;
 margin-top: 10px;
}

.submit-hover {
 background-color: rgba(255, 45, 90, 0.733);
 color: #e9e9e9;
}

/* drop down*/
.dropdown-menu {
  background-color: #f5f5f5;
  width: 200rpx;
  height: 80rpx;
  display: flex;
  flex-wrap: nowrap;
  font-size: 32rpx;
}
.dropdown-menu .active image {
  transform: rotate(180deg);
  background: none;
}
.dropdown-menu .active {
  background-color: #fff;
}
.flex-view {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  overflow: hidden;
  display: block;
  text-align: center;
  line-height: 80rpx;
}

.dropdown-icon {
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
  margin-left: 5px;
}

.dropdown-content {
  width: 750rpx;
  font-size: 28rpx;
}

.dropdown-content-li {
  line-height: 60rpx;
  text-align: center;
}

.dropdown-tab-layout {
  width: 750rpx;
  overflow: hidden;
  position: fixed;
  top: 80rpx;
  z-index: 99;
  border-bottom: solid 1px #eee;
  height: 100%;
  background-color: rgba(000,000,000,.5);
  
}

.dropdown-tab-layout .active {
  color: #00aa14;
}

.dropdown-tab-layout view {
  width: 750rpx;
  text-indent: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1rpx solid #e7e7e7;
  background-color:#ffffff;
  
}