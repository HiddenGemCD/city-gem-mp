<form bindsubmit="bindSubmit">
 <view class="container">
   <view class="top">
     <view class="form-title">Create Card</view>
   </view>
   <view class="form-subtitle">
     <view>Make a note about your favorite places</view>
     <view>Share it with friends on WeChat</view>
   </view>

   <view class="first-line">
   <picker bindchange="bindPickerCategoryChange" value="{{categoryIndex}}" range="{{categories}}">
    <view class="form-field category">
      <view>{{current_category}}</view>
      <!-- <view class="flex-view{{item.active?' active':''}}" wx:for="{{tabTxt}}" wx:key="" data-index="{{index}}" bindtap="filterTab">
      <text>{{current_category}}</text>
    </view> -->
    </view>
    </picker>

     <view class="purple">@</view>
     <view bindtap="getPlace" class="form-field name">{{name}}</view>
   </view>

  <view wx:if="{{address}}" class="form-field">
    <view>{{address}}</view>
   </view>
   

    <view style='border:1px solid #8C4DE8; width:620rpx; display:flex; padding: 30rpx;'>
      <view>
     <textarea style='width:600rpx;' placeholder="I recommend this because..."  name="description"/>
      </view>
    
    </view>
     
  
   <view class="form-field">
    <textarea placeholder="put tags separted with ," name="tagstring" auto-height />
   </view>
   
  

   <button class="submit" hover-class='submit-hover' form-type="submit" >Create</button>
 </view>
</form>


