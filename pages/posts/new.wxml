<!--pages/posts/new.wxml-->
<form bindsubmit="bindSubmit">
    <view class="user-input">
     <view class="text-area-wrap">
      <textarea placeholder="Name" name="name" auto-height />
     </view>
     <view class="text-area-wrap">
      <textarea placeholder="Description" name="description" auto-height />
     </view>
    </view>
    <button class="submit-button" form-type="submit" >Submit</button>
</form>
  