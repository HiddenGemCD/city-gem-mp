<form bindsubmit="bindSubmit">
 <view class="container">
   <view class="top">
     <view class="form-title">Edit Card</view>
     <view id="cross">X</view>
   </view>
   <view class="form-subtitle">
     <view>Make a note about your favorite places</view>
     <view>Share it with friends on WeChat</view>
   </view>

   <view class="first-line">
    <view class="form-field category">
      <view class="flex-view{{item.active?' active':''}}" wx:for="{{tabTxt}}" wx:key="" data-index="{{index}}" bindtap="filterTab">
      <text>{{item.text}}</text>
    </view>
    </view>
     <view class="purple">@</view>
     <view bindtap="getPlace" class="form-field name">{{name}}</view>
   </view>

   <view class="desc-box">
    <textarea placeholder="I recommend this because..." name="description" value="{{description}}" />
   </view>
   
   <view class="form-field">
    <textarea placeholder="put tags separted with ," name="tagstring" value="{{tagstring}}" auto-height />
   </view>
   
   <view class="form-field">
    <textarea placeholder="address" value="{{address}}" name="address" auto-height />
   </view>

   <button class="submit" form-type="submit" >Update</button>
 </view>
</form>


