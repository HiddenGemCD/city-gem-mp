/* pages/share/share.wxss */
.post-content-top {
  display: flex;
  align-items: center;
}

.at_symbol {
  margin: 0 15rpx;
}

.category {
  color: #FF2965;
}

.map-marker {
  width: 12px;
  height: 15px;
  display: inline-block
}

.tag {
  display: inline-block;
  font-size: 14px;
  line-height: 18px;
  padding: 0 15rpx;
  margin: 5rpx;
  border-radius: 9px;
  color: #A7A7A7;
  border: 1px solid #A7A7A7;
}

.post-content-bottom {
  /* height: 60rpx; */
  position: relative
}

.city {
  display: flex;
  align-items: center;
  width: 50%;
  padding: 15rpx 0;
  margin: 15rpx 0 0 15rpx;
}
.map-marker {
  margin-right: 10rpx;
}
.map-text {
  line-height: 100%;
  font-size: 14px;
}
.time_ago {
  font-size: 14px;
  color: #A7A7A7;
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
}

/* for flip card */

.post-container {
  /* width: 320px; */
  /* height: 100px; */
  position: relative;  
  border-radius: 4px;
  perspective: 800px;
}

.post {
  /* width: 100%; */
  height: 100%;
  /* position: absolute; */
  transform-style: preserve-3d;
  transition: transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  border-radius: 6px;
  /* box-shadow: 0 6px 16px rgba(0,0,0,0.15); */
  cursor: pointer;
}

.face {
    /* position: absolute; */
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: 6px;
    /* display: flex; */
    /* justify-content: center; */
    /* align-items: center; */
}
.front.hidden {
  display: none;
}
.back {
    transform: rotateY(180deg);

}
.back.hidden {
  display: none;
}

.flipped {
  transform: rotateY(180deg);
}

.description {
  margin-top: 15rpx;
}


.map {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.control {
  border: 1px solid #FF2965; 
  display: flex;
}
.control-item {
  display: inline-block; 
  line-height: 100%;
  align-items: center;
  font-size: 16px;
  width: 50%;
  text-align: center;
  padding: 15rpx;
}
.control-icon {
  width: 10px;
  height: 10px;
}
.edit {
  color: #FF2965;
}
.delete {
  background: #FF2965;
  color: white;
}

.post-container {
  z-index: 9999
}
button::after{ border: none; }
.btn-share {
  display: inline-block;
  float: right;
  background: none;
  border:none;
  padding: 5rpx 30rpx;
}
.icon-share {
  width: 20px;
  height: 20px;
}