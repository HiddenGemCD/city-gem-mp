<!--pages/share/share.wxml-->
<view wx:if='{{post}}' class='wrapper'>
  <view class='header'>This is a nice place recommended by your friend, {{shared_by.name}}</view>

  <view class='post'>
  <image class='avatar' src='{{shared_by.avatar}}'></image>
  <view class="post-content-top">
    
    <view class="category">{{post.category}}</view> 
    <view class="at_symbol">@</view>
    <view class="name">{{post.name}}</view>
  </view>

  <!-- <view class="description">{{post.description}}</view> -->
  <block class="tags" wx:for="{{post.tags}}" wx:for-item="tag" wx:for-index="tagsIndex" wx:key="tags">
    <view class="tag">{{tag}}</view>
  </block>

  <view class="description">
    {{post.description}}
  </view>

  <view class="post-content-bottom">
    <view class="city">
      <image class="map-marker" src='/commons/assets/icons/map-marker.png'></image>
      <view class="map-text">{{city.name}}</view>
    </view>
  </view>

  <view class="map" bindtap='openMap' data-longitude="{{post.longitude}}" data-latitude="{{post.latitude}}">
  <map id="map" longitude="{{post.longitude}}" latitude="{{post.latitude}}" scale="14" markers="{{markers}}" bindmarkertap="markertap" show-location style="width: 100%; height: 200px;"></map>  
  </view>

  </view>
  <view class='flex'>
  
  <button class='btn btn-enter' bindtap='goToLanding'>Enter</button>
  <view class='btn-description'>To create and share places with friends</view>
</view>
</view>


<!-- if friend delete the card -->
<view class='message-container'>
  <view wx:if='{{!post}}' class='message'>
    - your friend not reccomend this place anymore -
  </view>
</view>
