/**app.wxss**/
.btn {
  border: 1px solid black;
  padding: 5px 15px;
  display: inline-block
}
.wrapper {
  padding: 0 30rpx;
  font-family: Arial, Helvetica, sans-serif
}
.container {
  font-family: Arial, Helvetica, sans-serif
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.flex {
display:flex; 
flex-wrap:wrap; 
justify-content:space-around;
align-items: center
}

.card-container {
display:flex;
margin:22rpx; 
justify-content:center; 
align-items:center;
}

.card-style {
width:90vw;
/* height:300rpx;  */
background-color:white;
border-radius:10rpx; 
box-shadow: 0px 2px 5px grey;
}

.cat-text {
text-align:left;
font-size:18px;
color:#FF2965; 
font-weight:bold; 
margin:10px;
padding-left: 5px;
}

.card-description {
text-align:left; 
font-size:12px; 
color:#424949; 
margin-left:15px; 
margin-top: 0px; 
margin-right:15px;
}

.pin {
  width: 38rpx;
  height: 48rpx;
  position: relative;
  margin-bottom: -5px;
  margin-left: 14px;
}

.pin-location {
  text-align: center;
  line-height: 50px;
  position: relative;
  margin-left: 3px;
  font-size: 13px;
}

.date {
  /* margin-left: 80px; */
  font-size: 13px;
  text-align: right;
}

.upvote {
  position: absolute;
  width: 26px;
  height: 20px;
  margin-left: 57px;
  margin-top: -7px;
  color:#FF2965; 
}

.like-count {
  position: absolute;
  padding-left: 60.2px;
  padding-top: 6px;
  font-size: 11px;
  color: gray
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 75rpx;
  height: 75rpx;
  margin-top: 0rpx;
  margin-left: 30rpx;
  border-radius: 50%;
  float: left;
  box-shadow: 0.1px 0.1px 1px;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
